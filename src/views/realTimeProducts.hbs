<div class="container-fluid p-4 bg-light">
  <h1 class="display-4 text-primary text-center">
    <strong>Lista de Productos en Tiempo Real</strong></h1>

  <div class="row mt-4">
    <div class="col-md-3 border rounded p-4 bg-secondary border-3">
      <h3 class="mb-4 text-center">Agregar Producto</h3>
      <form id="addProductForm" class="mb-4">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="title">Título:</label>
            <input type="text" class="form-control" id="title" required />
          </div>
          <div class="col-md-6 mb-3">
            <label for="price">Precio:</label>
            <input type="number" class="form-control" id="price" required />
          </div>
          <div class="col-md-12 mb-3">
            <label for="description">Descripción:</label>
            <input type="text" class="form-control" id="description" required />
          </div>
          <div class="col-md-6 mb-3">
            <label for="code">Código:</label>
            <input type="text" class="form-control" id="code" required />
          </div>
          <div class="col-md-6 mb-3">
            <label for="stock">Stock:</label>
            <input type="number" class="form-control" id="stock" required />
          </div>
          <div class="col-md-12 mb-3">
            <label for="thumbnail">URL de la imagen:</label>
            <input type="text" class="form-control" id="thumbnail" required />
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Agregar Producto</button>
      </form>
    </div>

    <div id="product-list" class="col-md-9 border rounded p-4 bg-info border-3">
      <h3 class="mb-3 text-center">Productos Disponibles</h3>
      <div class="row mb-4">
        {{#each products}}
          <div id={{id}} class="col-md-6 col-lg-4">
            <div
              class="card mt-4 bg-light border border-3"
              style="width: 100%;"
            >
              <div
                class="img-container"
                style="width: 150px; height: 150px; overflow: hidden; margin: 0 auto;"
              >
                <img
                  src="{{thumbnail}}"
                  class="card-img-top"
                  alt="{{title}}"
                  style="width: 100%; height: 100%; object-fit: cover;"
                />
              </div>
              <div class="card-body" style="height: 250px;">
                <h2 class="card-title text-primary">{{title}}</h2>
                <p
                  class="card-text description"
                  style="font-weight: bold; font-size: 1.1em;"
                >{{description}}</p>
                <p class="card-text">Precio: ${{price}}</p>
                <p class="card-text">Código: {{code}}</p>
                <p class="card-text">Stock: {{stock}}</p>
              </div>
              <div class="card-footer text-center">
                <button
                  class="btn btn-danger"
                  onclick="deleteProduct({{id}})"
                >Eliminar</button>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>